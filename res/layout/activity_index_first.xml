<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".SplashActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:weightSum="10" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right|bottom" >

            <ImageView
                android:id="@+id/cloud_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cloud_left" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="right|bottom" >

            <ImageView
                android:id="@+id/cloud_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cloud_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/cloud_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cloud_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center" >

            <Button
                android:id="@+id/index_left_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_left_disable" />
        </LinearLayout>

        <fragment
            android:id="@+id/index_start_button_fragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            class="com.kmb.origami.view.IndexFirstActivity$FragmentOne" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center" >

            <Button
                android:id="@+id/index_right_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/index_right_button"
                android:onClick="indexFirstBtn" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>